{
  "manifest_version": 3,
  "name": "LinkedIn AutoConnect",
  "version": "1.0",
  "description": "Automatically sends connection requests to people on LinkedIn search",
  "permissions": ["activeTab", "scripting", "tabs" ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"]
    }
  ],
  "icons":{
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}

